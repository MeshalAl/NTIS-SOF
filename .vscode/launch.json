    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: debug main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "fetch-users",
                "--pagesize",
                "5"
            ]
        },
        {
            "name": "Python Debugger: debug bookmark",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "bookmark",
                "--all-columns"
            ]
        },
        {
            "name": "Python Debugger: debug add bookmark by id",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "bookmark",
                "add", 
                "-id",
                "999999"
            ]
        },
        {
            "name": "Python Debugger: debug remove bookmark by id",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "args": [
                "bookmark",
                "remove", 
                "-id",
                "999999"
            ]
        }
    ]
}